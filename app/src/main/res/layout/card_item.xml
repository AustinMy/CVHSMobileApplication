<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68dp" >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:elevation="14dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true">

            <!-- RelativeLayout just for the icon and the date -->
            <RelativeLayout
                android:id="@+id/icon_date_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="5dp">

                <!-- The icon -->
                <ImageView
                    android:id="@+id/card_view_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_wildcat_head" />

                <TextView
                    android:id="@+id/title_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/card_view_icon"
                    android:text="Announcement"
                    android:paddingLeft="5dp"
                    android:textSize="20sp"/>

                <!-- The date -->
                <TextView
                    android:id="@+id/date_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="February 24, 2016"
                    android:autoText="false"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp" />
            </RelativeLayout>

            <!-- TextView for the actual informational announcement text to be displayed -->
            <TextView
                android:id="@+id/info_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placeholder Text!"
                android:layout_below="@+id/icon_date_holder">
            </TextView>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>